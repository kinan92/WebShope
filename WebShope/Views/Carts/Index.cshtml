@model IEnumerable<WebShope.Models.Cart>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>
<table class="table" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Info)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th>
            <text>Price </text>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Info)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)kr
            </td>
            <td>
                @(item.Amount * item.Product.Price)kr
            </td >
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink(" + ","AddToCartOrRemove", new { id = item.Id, more = "+" }, new { @Class = "btn btn-info btn-sm" })
                @Html.ActionLink(" - ","AddToCartOrRemove", new { id = item.Id, more = "-", }, new { @Class = "btn btn-danger btn-sm"})
            </td>
        </tr>
    }
</table>
<div>
    @{
        var to = 0;
        foreach (var item in Model)
        {
            to = to + (item.Amount * item.Product.Price);
        }
    }
    <h1>
        Total Price : @(to)kr
    </h1>
    <p>@Html.ActionLink("Place order","PlaceOrder","Orders",null,new { @class = "btn btn-success" })</p>
</div>



